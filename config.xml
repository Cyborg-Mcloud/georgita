<?xml version="1.0" encoding="UTF-8"?>

<widget xmlns     = "http://www.w3.org/ns/widgets"
		xmlns:gap = "http://phonegap.com/ns/1.0"
         id        = "com.designge.georgita"
	    versionCode="28" 
        version   = "0.1.5"
		package="com.designge.georgita"
		xmlns:android="http://schemas.android.com/apk/res/android">
    <name>Georgita</name>

	
	<icon src="icon_1024.png" />
	<icon src="icon_1024.png" width="1024" height="1024" />




<access origin="*" />
<allow-intent href="*" />
<allow-navigation href="*" />
<allow-navigation href="*://*.smartgps.ge/*" />
<allow-intent href="http://*/*" launch-external="yes"/>
	<allow-intent href="https://*/*" launch-external="yes"/>
 <platform name="android">
	<preference name="android-minSdkVersion" value="18" />
	<allow-intent href="market:*" />
</platform>



<preference name="android-build-tool" value="gradle" /> 
<!--<preference name="StatusBarOverlaysWebView" value="true" />-->
	<preference name="phonegap-version" value="cli-8.0.0" /> 
	<preference name="orientation" value="portrait" />
	<preference name="target-device"              value="handset" />
<!--	<preference name="fullscreen" value="true" />-->
	<preference name="webviewbounce" value="true" />  
	<preference name="DisallowOverscroll" value="false" />
	<preference name="stay-in-webview"            value="false" /> 

<preference name="exit-on-suspend"            value="false" />          
<preference name="show-splash-screen-spinner" value="false" />    
<preference name="auto-hide-splash-screen"    value="false" />
<preference name="disable-cursor"             value="false" />
<preference name="android-minSdkVersion"      value="18" />         
<preference name="android-installLocation"    value="auto" />
<preference name="EnableViewportScale"    value="true" />

<preference name="StatusBarOverlaysWebView" value="true" />
<preference name="StatusBarBackgroundColor" value="#5c2b91" />
<preference name="StatusBarStyle" value="lightcontent" />

	<description>
Georgita
